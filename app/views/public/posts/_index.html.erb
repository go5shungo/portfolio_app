<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>名前</th>
      <th>ユーザー画像</th>
      <th>投稿写真</th>
      <th></th>
      <th>タイトル</th>
      <th></th>
      <th>本文</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= link_to post.user do %>
          <%= image_tag post.user.profile_image, size: '200x200' %>
          <% end %>
        </td>
        <td><%= image_tag post.image, size: "200x200" %><td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %><td>
        <td><%= post.body %></td>
        <td>
          <% post.tags.each do |tag| %>
            <li style="list-style: none;"><%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %></li>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>