<h1>投稿一覧</h1>

<% @posts.each do |post| %>

  <p>タイトル</p>
  <span>
    <%= link_to post.title, post_path(post.id) %>
  </span>
  
  <p>画像</p>
  <% if post.present? && post.image.present? %>
   <%= image_tag post.image, size: "200x200" %>
  <% end %>

  <div>
  <%= link_to post_path(post.id) do %>
  <% end %>
    <p>本文：<%= post.body %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
  </div>

<% end %>
