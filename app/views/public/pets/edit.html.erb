<h1>ペット登録情報変更</h1>
<%= form_with model: @pet do |f| %>
  
  <h4>写真</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>名前</h4>
  <%= f.text_field :name %>
	
  <h4>種類</h4>
      <%= f.radio_button :kind, 2 %>
      <%= f.label :kind, '犬', value: 2 %>
      <%= f.radio_button :kind, 1 %>
      <%= f.label :kind, '猫', value: 1 %>
      <%= f.radio_button :kind, 0 %>
      <%= f.label :kind, 'その他', value: 0 %>
  
  <h4>誕生日</h4>
  <%= f.date_field :birthday %>

  <h4>性別</h4>
   <div>
      <%= f.radio_button :sex, true %>
      <%= f.label :sex, 'オス♂', value: true %>
      <%= f.radio_button :sex, false %>
      <%= f.label :sex, 'メス♀', value: false %>
    </div>

  <h4>紹介文</h4>
  <%= f.text_area :introduction %>

  <%= f.submit '保存' %>
  
<% end %>