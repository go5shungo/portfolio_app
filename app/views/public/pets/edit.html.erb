<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0"><%= @pet.name %>のプロフィール変更</h5>
        <div class="form-body p-4">
          <%= form_with model: @pet do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
            </div>
          </div>
          <%= f.text_area :introduction, class: "form-control", rows: "3", placeholder: "ひとこと" %>
            <%= f.submit '更新', class: "btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
          <hr>
        </div>
    </div>
  </div>
</div>