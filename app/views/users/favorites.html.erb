<h1><%= @user.name %>がいいねした投稿一覧</h1>
  <% if @favorite_posts.present? %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>投稿者</th>
          <th>投稿者画像</th>
          <th>投稿写真</th>
          <th></th>
          <th>タイトル</th>
          <th></th>
          <th>本文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @favorite_posts.each do |post| %>
          <tr>
            <td><%= link_to post.user.name, user_path(post.user) %></td>
            <td><%= link_to post.user do %>
              <%= image_tag post.user.profile_image, size: '100x100' %>
              <% end %>
            </td>
            <td><%= image_tag post.image, size: "100x100" %><td>
            <td><%= link_to post.title,post, class: "post_#{post.id}" %><td>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3>いいねした投稿はありません。</h3>
  <% end %>