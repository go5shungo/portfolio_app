

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
        <div class="form-body p-4">
          <%= form_with model: @user do |f| %>
           <p><label for="inputImage">写真</label>
           <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
            <p><label for="inputName">名前</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
            </div>
          </div>
            <%= f.submit '更新', class: "btn btn-info" %>
          <% end %>
          <hr>
        </div>
    </div>
  </div>
</div>